#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules/node-dev/bin/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules/node-dev/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules/node-dev/bin/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules/node-dev/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node-dev@8.0.0/node_modules:/home/chhayya/Documents/work-code-example/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/node-dev" "$@"
else
  exec node  "$basedir/../../bin/node-dev" "$@"
fi
